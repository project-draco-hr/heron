{
  TopologyAPI.Topology topology=Runtime.topology(runtime);
  String jvmOptions=TopologyUtils.getComponentJvmOptions(topology);
  Map<String,Long> ramMap=TopologyUtils.getComponentRamMap(topology);
  Config.Builder builder=Config.newBuilder().put(LocalSchedulerKeys.COMPONENT_RAMMAP,TopologyUtils.formatRamMap(ramMap)).put(LocalSchedulerKeys.COMPONENT_JVM_OPTS_IN_BASE64,formatJavaOpts(jvmOptions));
  return builder.build();
}
