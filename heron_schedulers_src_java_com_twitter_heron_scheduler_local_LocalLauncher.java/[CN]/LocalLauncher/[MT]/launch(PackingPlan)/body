{
  LOG.log(Level.FINE,"Launching topology for local cluster {0}",LocalContext.cluster(config));
  if (!downloadAndExtractPackages()) {
    LOG.severe("Failed to download the core and topology packages");
    return false;
  }
  String[] schedulerCmd=getSchedulerCommand();
  Process p=startScheduler(schedulerCmd);
  if (p == null) {
    LOG.severe("Failed to start SchedulerMain using: " + Arrays.toString(schedulerCmd));
    return false;
  }
  LOG.info(String.format("For checking the status and logs of the topology, use the working directory %s",LocalContext.workingDirectory(config)));
  return true;
}
