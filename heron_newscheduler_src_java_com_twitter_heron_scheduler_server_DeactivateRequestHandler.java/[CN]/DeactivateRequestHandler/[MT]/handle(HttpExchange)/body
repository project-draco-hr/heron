{
  byte[] requestBody=HttpUtils.readHttpRequestBody(exchange);
  Scheduler.DeactivateTopologyRequest deactivateTopologyRequest=Scheduler.DeactivateTopologyRequest.newBuilder().mergeFrom(requestBody).build();
  boolean isDeactivatedSuccessfully=scheduler.onDeactivate(deactivateTopologyRequest) && TMasterUtils.sendToTMaster("deactivate",Runtime.topologyName(runtime),Runtime.schedulerStateManagerAdaptor(runtime));
  Scheduler.DeactivateTopologyResponse response=Scheduler.DeactivateTopologyResponse.newBuilder().setStatus(NetworkUtils.getHeronStatus(isDeactivatedSuccessfully)).build();
  HttpUtils.sendHttpResponse(exchange,response.toByteArray());
}
