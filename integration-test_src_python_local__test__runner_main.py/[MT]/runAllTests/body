def runAllTests(args):
    ' Run the test for each topology specified in the conf file '
    successes = []
    failures = []
    for test in TEST_CASES:
        logging.info('==== Starting test %s of %s: %s ====', ((len(successes) + len(failures)) + 1), len(TEST_CASES), test)
        if runTest(test, test, args):
            successes += [test]
        else:
            failures += [test]
    return (successes, failures)
