def submitTopology(heronCliPath, testCluster, testJarPath, topologyClassPath, topologyName, inputFile, outputFile):
    ' Submit topology using heron-cli '
    splitcmd = [('%s' % heronCliPath), 'submit', '--verbose', '--', ('%s' % testCluster), ('%s' % testJarPath), ('%s' % topologyClassPath), ('%s' % topologyName), ('%s' % inputFile), ('%s' % outputFile), ('%d' % len(TEST_INPUT))]
    logging.info('Submitting topology: %s', splitcmd)
    p = subprocess.Popen(splitcmd)
    p.wait()
    logging.info('Submitted topology %s', topologyName)
