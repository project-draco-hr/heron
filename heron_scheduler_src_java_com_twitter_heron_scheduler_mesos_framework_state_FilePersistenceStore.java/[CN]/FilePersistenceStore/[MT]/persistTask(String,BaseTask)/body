{
  LOG.info(String.format("Persist Task: %s with details: %s",name,task));
  try {
    Files.write(new File(taskPath + "/" + name).toPath(),BaseTask.getTaskInJSON(task).getBytes());
  }
 catch (  IOException e) {
    LOG.log(Level.SEVERE,"Failed to write file",e);
    return false;
  }
  return true;
}
