@tornado.gen.coroutine
def get(self):
    try:
        cluster = self.get_argument_cluster()
        environ = self.get_argument_environ()
        topology_name = self.get_argument_topology()
        component = self.get_argument_component()
        topology = self.tracker.getTopologyByClusterEnvironAndName(cluster, environ, topology_name)
        instances = self.get_arguments(constants.PARAM_INSTANCE)
        exceptions_summary = yield tornado.gen.Task(self.getComponentExceptionSummary, topology.tmaster, component, instances)
        result = self.make_success_response(exceptions_summary)
        self.write_success_response(exceptions_summary)
    except Exception as e:
        self.write_error_response(e)
