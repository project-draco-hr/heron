{
  this.topology=com.twitter.heron.spi.utils.Runtime.topology(runtime);
  this.instanceRamDefault=Context.instanceRam(config);
  this.instanceCpuDefault=Context.instanceCpu(config).doubleValue();
  this.instanceDiskDefault=Context.instanceDisk(config);
  List<TopologyAPI.Config.KeyValue> topologyConfig=topology.getTopologyConfig().getKvsList();
  this.maxContainerRam=Long.parseLong(TopologyUtils.getConfigWithDefault(topologyConfig,com.twitter.heron.api.Config.TOPOLOGY_CONTAINER_MAX_RAM_HINT,Long.toString(instanceRamDefault * DEFAULT_NUMBER_INSTANCES_PER_CONTAINER)));
  this.maxContainerCpu=Double.parseDouble(TopologyUtils.getConfigWithDefault(topologyConfig,com.twitter.heron.api.Config.TOPOLOGY_CONTAINER_MAX_CPU_HINT,Double.toString(instanceCpuDefault * DEFAULT_NUMBER_INSTANCES_PER_CONTAINER)));
  this.maxContainerDisk=Long.parseLong(TopologyUtils.getConfigWithDefault(topologyConfig,com.twitter.heron.api.Config.TOPOLOGY_CONTAINER_MAX_DISK_HINT,Long.toString(instanceDiskDefault * DEFAULT_NUMBER_INSTANCES_PER_CONTAINER)));
}
