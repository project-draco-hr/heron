{
  final SettableFuture<Boolean> result=SettableFuture.create();
  try {
    client.create().creatingParentsIfNeeded().withMode(isEphemeral ? CreateMode.EPHEMERAL : CreateMode.PERSISTENT).forPath(path,data);
    LOG.info("Created node for path: " + path);
    result.set(true);
  }
 catch (  Exception e) {
    result.setException(new RuntimeException("Could not createNode:",e));
  }
  return result;
}
