{
  LocalFileSystemStateManager manager=Mockito.spy(new LocalFileSystemStateManager());
  manager.initialize(getConf());
  PowerMockito.spy(FileUtility.class);
  PowerMockito.doReturn(true).when(FileUtility.class,"createDirectory",Matchers.anyString());
  Assert.assertTrue(manager.initTree());
  PowerMockito.doReturn(true).when(FileUtility.class,"deleteFile",Matchers.anyString());
  Assert.assertTrue(manager.deleteExecutionState(topologyName).get());
  PowerMockito.verifyStatic();
  FileUtility.deleteFile(Matchers.eq(String.format("%s/%s/%s",rootAddr,"executionstate",topologyName)));
}
