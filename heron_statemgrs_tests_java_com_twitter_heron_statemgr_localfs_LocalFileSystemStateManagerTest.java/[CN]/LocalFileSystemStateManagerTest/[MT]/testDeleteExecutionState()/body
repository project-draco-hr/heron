{
  LocalFileSystemStateManager manager=Mockito.spy(new LocalFileSystemStateManager());
  manager.initialize(getConfig());
  PowerMockito.spy(FileUtils.class);
  PowerMockito.doReturn(true).when(FileUtils.class,"createDirectory",Matchers.anyString());
  Assert.assertTrue(manager.initTree());
  PowerMockito.doReturn(true).when(FileUtils.class,"deleteFile",Matchers.anyString());
  Assert.assertTrue(manager.deleteExecutionState(topologyName).get());
  PowerMockito.verifyStatic();
  FileUtils.deleteFile(Matchers.eq(String.format("%s/%s/%s",rootAddr,"executionstate",topologyName)));
}
