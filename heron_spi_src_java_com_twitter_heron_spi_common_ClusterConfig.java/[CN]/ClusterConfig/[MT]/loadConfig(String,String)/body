{
  Config homeConfig=loadBasicConfig(heronHome,configPath);
  Config.Builder cb=Config.newBuilder().putAll(homeConfig).putAll(loadDefaultsConfig(Context.clusterFile(homeConfig))).putAll(loadPackingConfig(Context.packingFile(homeConfig))).putAll(loadSchedulerConfig(Context.schedulerFile(homeConfig))).putAll(loadStateManagerConfig(Context.stateManagerFile(homeConfig))).putAll(loadUploaderConfig(Context.uploaderFile(homeConfig)));
  return cb.build();
}
