def create_parser(subparsers):
    parser = subparsers.add_parser('submit', help='Submit a topology', usage=('%(prog)s [options] cluster/[role]/[env] ' + 'topology-file-name topology-class-name [topology-args]'), add_help=False)
    args.add_titles(parser)
    args.add_cluster_role_env(parser)
    args.add_topology_file(parser)
    args.add_topology_class(parser)
    args.add_config(parser)
    args.add_deactive_deploy(parser)
    args.add_system_property(parser)
    args.add_verbose(parser)
    parser.set_defaults(subcommand='submit')
    return parser
