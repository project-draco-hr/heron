def add_config(parser):
    ' add config '
    default_config_path = utils.get_heron_conf_dir()
    parser.add_argument('--config-path', metavar=(('(a string; path to cluster config; default: "' + default_config_path) + '")'), default=os.path.join(utils.get_heron_dir_explorer(), default_config_path))
    return parser
