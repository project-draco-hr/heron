{
  String pkgType;
  String basename=FileUtils.getBaseName(topologyJarFile);
  if (FileUtils.isOriginalPackagePex(basename)) {
    pkgType="pex";
  }
 else   if (FileUtils.isOriginalPackageJar(basename)) {
    pkgType="jar";
  }
 else {
    pkgType="tar";
  }
  Config config=Config.newBuilder().put(Keys.topologyId(),topology.getId()).put(Keys.topologyName(),topology.getName()).put(Keys.topologyDefinitionFile(),topologyDefnFile).put(Keys.topologyPackageFile(),topologyPackage).put(Keys.topologyJarFile(),topologyJarFile).put(Keys.topologyPackageType(),pkgType).build();
  return config;
}
