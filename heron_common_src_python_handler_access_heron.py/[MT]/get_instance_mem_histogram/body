@tornado.gen.coroutine
def get_instance_mem_histogram(cluster, environ, topology, instance, role=None):
    params = dict(cluster=cluster, environ=environ, topology=topology, instance=instance)
    if (role is not None):
        params['role'] = role
    request_url = tornado.httputil.url_concat(create_url(HISTOGRAM_URL_FMT), params)
    raise tornado.gen.Return(yield fetch_url_as_json(request_url))
