def get_topologies(self, callback=None):
    ' get topologies '
    isWatching = False
    ret = {'result': None, }
    if callback:
        isWatching = True
    else:

        def callback(data):
            'Custom callback to get the topologies right now.'
            ret['result'] = data
    self._get_topologies_with_watch(callback, isWatching)
    return ret['result']
