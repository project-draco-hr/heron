{
  byte[] requestBody=HttpUtils.readHttpRequestBody(exchange);
  Scheduler.RestartTopologyRequest restartTopologyRequest=Scheduler.RestartTopologyRequest.newBuilder().mergeFrom(requestBody).build();
  boolean isRestartSuccessfully=scheduler.onRestart(restartTopologyRequest);
  Scheduler.SchedulerResponse response=SchedulerUtils.constructSchedulerResponse(isRestartSuccessfully);
  HttpUtils.sendHttpResponse(exchange,response.toByteArray());
}
