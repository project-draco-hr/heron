@tornado.gen.coroutine
def get_filestats(cluster, environ, topology, container, path):
    request_url = tornado.httputil.url_concat(create_url(FILESTATS_URL_FMT), dict(cluster=cluster, environ=environ, topology=topology, container=container, path=path))
    raise tornado.gen.Return(yield fetch_url_as_json(request_url))
