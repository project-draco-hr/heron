@tornado.gen.coroutine
def get_component_exceptionsummary(cluster, environ, topology, component):
    request_url = tornado.httputil.url_concat(create_url(EXCEPTION_SUMMARY_URL_FMT), dict(cluster=cluster, environ=environ, topology=topology, component=component))
    raise tornado.gen.Return(yield fetch_url_as_json(request_url))
